<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tvOptionSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Guests"
        android:textColor="@android:color/black"
        android:textSize="@dimen/option_item_text_size"/>

    <ImageView
        android:id="@+id/spOptionSelect"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ic_chevron_right_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvDefault"
        android:layout_toLeftOf="@+id/spOptionSelect"
        android:layout_toStartOf="@+id/spOptionSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5"
        android:textColor="@android:color/black"
        android:textSize="@dimen/option_item_text_size"/>
    <View
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvOptionSelect"
        android:background="@color/grey_background"/>
</RelativeLayout>