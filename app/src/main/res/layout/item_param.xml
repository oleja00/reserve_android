<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/contactBackgound"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/param_tv_margin"
        tools:text="check" />

    <CheckBox
        android:layout_width="@dimen/image_height_24"
        android:layout_height="@dimen/image_height_24"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/param_tv_margin"
        android:layout_marginEnd="@dimen/param_tv_margin"
        android:background="@android:color/transparent"
        android:button="@drawable/checkbox_selector"
        android:id="@+id/checkbox"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvContactName"
        android:layout_marginTop="@dimen/param_tv_margin"
        android:background="@android:color/darker_gray" />
</RelativeLayout>