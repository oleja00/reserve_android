<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <ImageView
            android:id="@+id/ivCategoriesImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/ic_restaurant_black_24dp" />

        <TextView
            android:id="@+id/tvCategoriesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:text="Categories" />

        <TextView
            android:id="@+id/tvCategoriesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tvCategoriesName"
            android:textSize="20sp"
            tools:text="Count"
            />

        <View
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:alpha="0.5"
            android:id="@+id/alphaView"
            android:visibility="gone"
            android:background="@android:color/white"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

</LinearLayout>